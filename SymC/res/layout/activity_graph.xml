<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        
        <!--  Throat pain graph -->
        <LinearLayout
            android:id="@+id/graphThroatPain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFA500"
            android:layout_margin="16dp"
            android:padding="8dp">
        </LinearLayout>
        <!--  End throat pain graph -->
        
        <!--  Eating difficulty graph -->
        <LinearLayout
            android:id="@+id/graphEatingDifficulty"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FF6500"
            android:layout_margin="16dp"
            android:padding="8dp">
        </LinearLayout>
        <!--  End eating difficulty graph -->
        
        <!--  Start Button -->
	    <com.beardedhen.androidbootstrap.BootstrapButton
	        android:id="@+id/graphStart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="16dp"
	        android:layout_gravity="center"
	        android:padding="16dp"
	        android:gravity="right"
	        android:textSize="32sp"
	        android:layout_weight="1"
	        android:text="@string/start"
	        bootstrapbutton:bb_icon_right="fa-arrow-circle-o-right"
	        bootstrapbutton:bb_roundedCorners="true"
	        bootstrapbutton:bb_text_alignment="center"
	        bootstrapbutton:bb_type="primary" />
	    <!--  End Start Button -->
	    
    </LinearLayout>
</ScrollView>
